{
  "compilerOptions": {
    "strict": true,
    "lib": ["ES2020", "esnext", "dom"],
    "target": "ES2020",
    "module": "ES2020",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
//    "paths": {
//      "@/*": ["./*"]
//    },
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": ".",
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["./**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
